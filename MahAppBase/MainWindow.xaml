<controls:MetroWindow
    x:Class="MahAppBase.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:MahAppBase"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:MahAppBase.ViewModel"
    Title=""
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <controls:MetroWindow.Flyouts>
        <controls:FlyoutsControl>
            <controls:Flyout
                x:Name="flyDonate"
                Width="400"
                Header="Donate"
                IsOpen="{Binding DonateIsOpen}"
                Position="Left"
                Theme="Light">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Width="400" Source="pack://application:,,,/Image/Donate.jpg" />
                </StackPanel>
            </controls:Flyout>
        </controls:FlyoutsControl>
    </controls:MetroWindow.Flyouts>
    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button Command="{Binding ButtonDonateClickCommand}">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern
                        Width="24"
                        Height="24"
                        Kind="Beer" />
                    <TextBlock
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Text="Donate Developer" />
                </StackPanel>
            </Button>
            <Button Content="Settings" />
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <controls:MetroAnimatedTabControl Grid.Row="0">
            <controls:MetroTabItem Header="TabItem1" />
            <controls:MetroTabItem Header="TabItem2" />
            <controls:MetroTabItem Header="TabItem3" />
        </controls:MetroAnimatedTabControl>
    </Grid>
</controls:MetroWindow>
